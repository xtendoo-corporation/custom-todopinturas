<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_import_products_wizard" model="ir.ui.view">
        <field name="name">import.products.wizard.form</field>
        <field name="model">import.products.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Productos">
                <group>
                    <field name="file" filename="file_name"/>
                </group>
                 <group>
                    <field name="error_log" invisible="not error_log"/>
                </group>
                <footer>
                    <button name="action_import_products" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
